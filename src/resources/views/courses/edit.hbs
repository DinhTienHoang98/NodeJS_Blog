<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <form>
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="decription">Mô tả khóa học</label>
                <textarea class="form-control" id="decription" name="decription">{{course.decription}}</textarea>
            </div>
            <div class="form-group">
                <label for="videoID">VideoID khóa học</label>
                <input type="text" class="form-control" value="{{course.videoID}}" id="videoID" name="videoID">
            </div>
            <div class="form-group">
                <label for="level">level</label>
                <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
            </div>

            <button type="submit" class="btn btn-primary">Lưu khóa học</button>
        </form>
    </form>
</div>